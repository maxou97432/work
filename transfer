    df_ti_dept['TAUX_INFL_2015'] = (df_ti_dept['TAUX_INFL_TRANSFO']/taux_infl_2015_2014)*100
    ligne_current_year = df_ti_dept[df_ti_dept['Year'].dt.year == current_year]
    if not ligne_current_year.empty:
        taux_infl_current_year = ligne_current_year["TAUX_INFL_2015"].iloc[0]
    else:
        print(f"Aucune donn√©e pour {current_year}")
    df_ti_dept['TAUX_INFL_FINAL'] = ((taux_infl_current_year/df_ti_dept['TAUX_INFL_2015'])-1)*100
