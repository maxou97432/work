if (df_merged['nb_bien_6m'] - df_merged['nb_bien_3m']) == 0:
    df_merged['mean_6m_3m'] = (df_merged['mean_6m'] *  df_merged['nb_bien_6m'] - df_merged['nb_bien_3m'] * df_merged['mean_3m']) / df_merged['nb_bien_6m'] 
else : 
    df_merged['mean_6m_3m'] = (df_merged['mean_6m'] *  df_merged['nb_bien_6m'] - df_merged['nb_bien_3m'] * df_merged['mean_3m']) / (df_merged['nb_bien_6m'] - df_merged['nb_bien_3m'])
