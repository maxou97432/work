periode_reference = None
ref_date = periode_reference or df["DATE"].max()

date_max = (ref_date.replace(day = 1))
date_min = (date_max - relativedelta(years= 10))

start_time = time.time()
base_ml = detect_ano_ml(input_df=df, date_min = date_min, date_max = date_max, type_bien = None)
end_time = time.time()
